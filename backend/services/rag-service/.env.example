# ============================================================
# RAG Service Configuration
# ============================================================

# Service Settings
SERVICE_NAME=rag-service
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0
ENVIRONMENT=development

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================================
# Database Configuration
# ============================================================

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/product-db

# Product Service API (TODO - instead of direct DB connection !)
# PRODUCT_SERVICE_URL=http://localhost:8050/api/v1/products

# ============================================================
# AI/ML Configuration
# ============================================================

# Embedding Model (sentence-transformers model name)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector Search Settings
DEFAULT_TOP_K=5
SIMILARITY_THRESHOLD=0.3

# ============================================================
# Storage Configuration
# ============================================================

# Vector Store Data Directory
DATA_DIR=./data

# ============================================================
# Service Discovery & Integration
# ============================================================

# Eureka Service Discovery (Optional)
EUREKA_SERVER=http://localhost:8761/eureka
EUREKA_ENABLED=false

# ============================================================
# Logging
# ============================================================

LOG_LEVEL=INFO
